@page
@model EcTools.Pages.FormTemplatesModel
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/FormTemplates.css" />

<div class="EC_MAIN_CONTENTS_CONTAINER">
    <div class="EC_BANNER_CONTAINER">
        <img src="~/media/images/ecBanner.png" alt="EC Tools Banner" />
    </div>

    <div class="EC_UPLOAD_FORM_CONTAINER">
        <div class="EC_UPLOAD_FORM_IMAGE_CONTAINER">
            <img src="~/media/images/uploadDocuments.png" alt="Form File Upload" />
        </div>

        <div class="EC_UPLOAD_FORM_INPUTS_CONTAINER">
            <div class="EC_UPLOAD_FORM_INPUT_BROWSE_FILE_CONTAINER">
                <label for="file" class="form-label">Choose a file:</label>
                <input type="file" name="file" id="file" class="form-control" required />
            </div>
            <div class="EC_UPLOAD_FORM_INPUT_UPLOAD_FILE_CONTAINER">
                <input type="submit" value="Upload" class="" />
            </div>
        </div>
    </div>

    <div class="EC_PROGRESS_BAR_CONTAINER">
        <div class="wrapper">
            <div class="progress-bar">
                <div class="bar" data-size="20">
                    <span class="perc"></span>
                </div>
            </div>
        </div>
    </div>


    <div class="EC_PROCESS_STATUS_CONTAINER">

        <div class="EC_PROCESS_WARNING_STATE_CONTAINER EC_WARNING">
            <div class="EC_PROCESS_WARNING_STATE_HEADER_CONTAINER">
