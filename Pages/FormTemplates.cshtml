            <img src="~/media/images/uploadDocuments.png" alt="Form File Upload" />
        </div>

        <div class="EC_UPDATE_COLUMNS_NAMES_FORM_INPUTS_FIElD_CONTAINER">
            <div class="EC_UPDATE_COLUMNS_NAMES_FORM_INPUTS_CONTAINER">
                <div class="EC_UPDATE_COLUMNS_NAMES_FORM_INPUT_CONTAINER">
                    <label for="column_1" class="form-label">Column 1:</label>
                    <input type="text" name="columnValue_1" id="column_1" class="" placeholder="Column Value" required />
                </div>

                <div class="EC_UPDATE_COLUMNS_NAMES_FORM_INPUT_CONTAINER">
