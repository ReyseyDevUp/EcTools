@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="EC_MAIN_CONTENTS_CONTAINER">
        <div class="EC_BANNER_CONTAINER">
            <img src="~/media/images/ecBanner.png" alt="EC Tools Banner" />
        </div>

        <div id="EC_TOOLS_DIV_CONTAINER">

            <div class="EC_CARDS_CONTAINER">
                <div class="EC_CARD_CONTAINER EC-CARD--V">
